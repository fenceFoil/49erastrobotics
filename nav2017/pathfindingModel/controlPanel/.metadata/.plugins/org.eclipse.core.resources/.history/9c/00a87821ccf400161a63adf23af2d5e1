package edu.uncc.astrobotics.navProtoControls;
import javax.swing.JPanel;
import javax.swing.JSlider;
import javax.swing.JSpinner;
import java.awt.BorderLayout;
import javax.swing.BoxLayout;
import javax.swing.JLabel;
import java.awt.Dimension;
import java.awt.Component;
import javax.swing.SwingConstants;
import javax.swing.SpinnerNumberModel;
import java.awt.Font;

public class JNavValueSlider extends JPanel {
	
	private String variable = "<<< NO VARIABLE ASSIGNED >>>";

	/**
	 * Create the panel.
	 */
	public JNavValueSlider(String variable, double minValue, double maxValue, double defaultValue) {
		setSize(new Dimension(500, 100));
		setLayout(new BorderLayout(0, 0));
		
		JSlider slider = new JSlider();
		slider.setPaintTicks(true);
		slider.setPaintLabels(true);
		add(slider);
		
		JSpinner spinner = new JSpinner();
		spinner.setPreferredSize(new Dimension(70, 28));
		add(spinner, BorderLayout.WEST);
		
		JSpinner spinner_1 = new JSpinner();
		spinner_1.setPreferredSize(new Dimension(70, 28));
		add(spinner_1, BorderLayout.EAST);
		
		JPanel panel = new JPanel();
		add(panel, BorderLayout.NORTH);
		
		JLabel lblNewLabel = new JLabel("New label");
		lblNewLabel.setFont(new Font("SansSerif", Font.BOLD, 16));
		lblNewLabel.setHorizontalTextPosition(SwingConstants.LEADING);
		panel.add(lblNewLabel);
		lblNewLabel.setHorizontalAlignment(SwingConstants.CENTER);
		
		JPanel panel_1 = new JPanel();
		panel_1.setPreferredSize(new Dimension(80, 10));
		panel_1.setMinimumSize(new Dimension(50, 10));
		panel.add(panel_1);
		
		JSpinner spinner_2 = new JSpinner();
		spinner_2.setPreferredSize(new Dimension(100, 28));
		spinner_2.setModel(new SpinnerNumberModel(new Double(0), null, null, new Double(1)));
		panel.add(spinner_2);

	}

}
